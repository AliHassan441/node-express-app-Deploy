extends layout

block content
  h1 My Cart
  -var total=0;
    table.table
      thead
        th Name
        th Price
        th Quantity
        th Actions
      tbody
        each item in cart
          - total +=Number(item.price)
          tr
            td=item.name
            td=item.price
            td=item.quantity
            td
              a(href="/products/cart/remove/"+item._id, class="btn btn-danger") Remove Item
      tfoot
        tr
          td Total
          td=total

